<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/black"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">

        <com.example.thomasperrin.pokerhh.components.Board
                android:id="@+id/board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </com.example.thomasperrin.pokerhh.components.Board>

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:background="@drawable/background_white_rounded_stroke_primary"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/textCard1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:hint="2s"
                        android:maxLength="3"
                        android:gravity="center"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/textCard2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:maxLength="3"
                        android:hint="jc"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/textCard3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:layout_marginLeft="10dp"
                        android:maxLength="3"
                        android:hint="3d"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>



            </LinearLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:background="@drawable/background_white_rounded_stroke_primary"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/textCard4"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:hint="kh"
                        android:maxLength="3"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>

            </FrameLayout>

            <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:background="@drawable/background_white_rounded_stroke_primary"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/textCard5"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:hint="ts"
                        android:maxLength="3"
                        android:layout_height="wrap_content"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>